{
    "name": "pablofmorales/api-transformer",
    "description": "API Tool for transform the output easily between Laravel/Lumen API.",
    "keywords": ["framework", "laravel", "api"],
    "license": "MIT",
    "type": "library",
    "require": {
        "php": ">=7.0.0",
        "laravel/framework": "5.5.*",
        "laravel/passport": "^4.0",
        "laravel/tinker": "~1.0",
        "league/fractal": "^0.17.0"
    },
    "require-dev": {
        "filp/whoops": "~2.0",
        "fzaninotto/faker": "~1.4",
        "mockery/mockery": "~1.0",
        "phpunit/phpunit": "~6.0",
        "symfony/thanks": "^1.0"
    },
    "autoload": {
         "psr-4": {
            "APITransformer\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
